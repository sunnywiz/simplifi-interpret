<Window x:Class="MoneyInterpret.Views.SplitTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyInterpret.Views"
        xmlns:converters="clr-namespace:MoneyInterpret.Converters"
        mc:Ignorable="d"
        Title="Split Interest and Principal" Height="600" Width="1000">
    <Window.Resources>
        <converters:AmountColorConverter x:Key="AmountColorConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Select Accounts:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox Name="AccountsListBox" Height="100" 
                         ItemsSource="{Binding AvailableAccounts}" 
                         SelectionMode="Multiple"
                         SelectionChanged="AccountsListBox_SelectionChanged"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Instructions:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock TextWrapping="Wrap">
                    1. Select one or more accounts from the list on the left.<LineBreak/>
                    2. Select a transaction from the Original Transactions grid.<LineBreak/>
                    3. Click the "Split Transaction" button to split it into principal and interest.<LineBreak/>
                    4. Review the split transactions in the right grid.<LineBreak/>
                    5. Click Save to apply the changes or Cancel to discard them.
                </TextBlock>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Original Transactions" FontWeight="Bold" Margin="0,0,0,5"/>
                
                <DataGrid Grid.Row="1" 
                          Name="OriginalTransactionsGrid"
                          ItemsSource="{Binding OriginalTransactions}" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          AlternatingRowBackground="AliceBlue">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Account" Binding="{Binding AccountNumber}" Width="Auto"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding PostDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="Auto"/>
                        <DataGridTextColumn Header="Check #" Binding="{Binding CheckNum}" Width="Auto"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=\{0:C\}}" Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Amount}" Value="0">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding Amount, Converter={StaticResource AmountColorConverter}}" Value="True">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Amount, Converter={StaticResource AmountColorConverter}}" Value="False">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                <Button Content="Split Transaction" Padding="10,5" Margin="0,0,0,10" Click="SplitButton_Click"/>
            </StackPanel>
            
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Split Transactions" FontWeight="Bold" Margin="0,0,0,5"/>
                
                <DataGrid Grid.Row="1" 
                          Name="SplitTransactionsGrid"
                          ItemsSource="{Binding SplitTransactions}" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          AlternatingRowBackground="AliceBlue">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Account" Binding="{Binding AccountNumber}" Width="Auto"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding PostDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="Auto"/>
                        <DataGridTextColumn Header="Check #" Binding="{Binding CheckNum}" Width="Auto"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=\{0:C\}}" Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Amount}" Value="0">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding Amount, Converter={StaticResource AmountColorConverter}}" Value="True">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Amount, Converter={StaticResource AmountColorConverter}}" Value="False">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
